<h2>Liste des contacts</h2>
<table class="table">
    {{#each contacts}}
    <tr>
        <td>{{prenom}} {{nom}}</td>
        <td>
            <a href="/contacts/{{id}}" class="btn btn-primary btn-xs">
                <span class="glyphicon glyphicon-zoom-in"></span>
                Afficher
            </a>
        </td>
    </tr>
    {{/each}}
</table>